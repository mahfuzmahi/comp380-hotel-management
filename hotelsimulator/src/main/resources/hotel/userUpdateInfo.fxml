<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hotel.frontend.UserUpdateInfoController">

    <children>
        <VBox AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              style="-fx-background-color: lightblue;">
            <children>

                <!-- Top user menu -->
                <fx:include source="userMenu.fxml"/>

                <VBox spacing="10.0" style="-fx-padding: 20;">
                    <children>
                        <Label text="Update My Account Information" style="-fx-font-size: 24px;"/>

                        <!-- Username (Not able to change) -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Username:" prefWidth="140"/>
                                <TextField fx:id="usernameField"
                                           prefWidth="220"
                                           editable="false"/>
                            </children>
                        </HBox>

                        <!-- Current password -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Current Password:" prefWidth="140"/>
                                <PasswordField fx:id="oldPasswordField" prefWidth="220"/>
                            </children>
                        </HBox>

                        <!-- New password -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="New Password:" prefWidth="140"/>
                                <PasswordField fx:id="newPasswordField" prefWidth="220"/>
                            </children>
                        </HBox>

                        <!-- New email -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="New Email:" prefWidth="140"/>
                                <TextField fx:id="emailField" prefWidth="220"/>
                            </children>
                        </HBox>

                        <!-- New phone -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="New Phone:" prefWidth="140"/>
                                <TextField fx:id="phoneField" prefWidth="220"/>
                            </children>
                        </HBox>

                        <!-- New bank info -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="New Bank Info:" prefWidth="140"/>
                                <TextField fx:id="bankField" prefWidth="220"/>
                            </children>
                        </HBox>

                        <!-- Save button -->
                        <HBox spacing="10.0">
                            <children>
                                <Button text="Save Changes" onAction="#handleSave"/>
                            </children>
                        </HBox>

                        <!-- Status label -->
                        <Label fx:id="statusLabel" textFill="red"/>

                    </children>
                </VBox>

                <Pane VBox.vgrow="ALWAYS"/>

            </children>
        </VBox>
    </children>
</AnchorPane>
