<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hotel.frontend.ReportIssueController">

    <children>
        <VBox AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              style="-fx-background-color: lightblue;">
            <children>

                <!-- Top user menu -->
                <fx:include source="userMenu.fxml"/>

                <VBox spacing="10.0" style="-fx-padding: 20;">
                    <children>
                        <Label text="Report an Issue" style="-fx-font-size: 24px;"/>

                        <!-- Username row -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Username:" prefWidth="120"/>
                                <TextField fx:id="usernameField" prefWidth="200"/>
                            </children>
                        </HBox>

                        <!-- Room number row (NEW) -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Room Number:" prefWidth="120"/>
                                <TextField fx:id="roomNumberField" prefWidth="200"/>
                            </children>
                        </HBox>

                        <!-- Floor number row (NEW) -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Floor Number:" prefWidth="120"/>
                                <TextField fx:id="floorNumberField" prefWidth="200"/>
                            </children>
                        </HBox>

                        <!-- Issue row -->
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Issue:" prefWidth="120"/>
                                <TextArea fx:id="issueField"
                                          prefWidth="320"
                                          prefHeight="150"
                                          wrapText="true"/>
                            </children>
                        </HBox>

                        <!-- Submit button row -->
                        <HBox spacing="10.0">
                            <children>
                                <Button text="Submit Issue" onAction="#handleSubmit"/>
                            </children>
                        </HBox>

                        <!-- Status label -->
                        <Label fx:id="statusLabel" textFill="red"/>

                    </children>
                </VBox>

                <Pane VBox.vgrow="ALWAYS"/>

            </children>
        </VBox>
    </children>
</AnchorPane>
