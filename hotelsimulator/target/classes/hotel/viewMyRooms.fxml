<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hotel.frontend.ViewMyRoomsController">

    <VBox spacing="10"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          style="-fx-background-color: lightblue; -fx-padding: 20;">

        <!-- Dropdown Menu -->
        <fx:include source="userMenu.fxml"/>

        <Label text="View My Rooms" style="-fx-font-size: 24px;"/>
        <Label text="These are the rooms you have booked:"/>

        <!-- List of user's rooms -->
        <ListView fx:id="roomsList" prefHeight="300"/>

        <!-- Status / messages -->
        <Label fx:id="statusLabel" textFill="red"/>

        <!-- Buttons row -->
        <HBox spacing="10">
            <Button text="Cancel Reservation" onAction="#handleCancelReservation"/>
            <!-- Optional: Back button (you already have handleBack in controller) -->
            <Button text="Back" onAction="#handleBack"/>
        </HBox>

    </VBox>
</AnchorPane>

