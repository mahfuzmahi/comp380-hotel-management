<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hotel.frontend.UserUpdateInfoController">

    <VBox AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="5.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          style="-fx-background-color: lightblue;">
        <children>

            <!-- Top dropdown menu -->
            <fx:include source="userMenu.fxml"/>

            <VBox spacing="10.0" style="-fx-padding: 20;">
                <children>
                    <Label text="Update Account Info" style="-fx-font-size: 20px;"/>

                    <HBox spacing="10.0">
                        <children>
                            <Label text="Username:" prefWidth="140"/>
                            <TextField fx:id="usernameField" prefWidth="200"/>
                        </children>
                    </HBox>

                    <HBox spacing="10.0">
                        <children>
                            <Label text="Current Password:" prefWidth="140"/>
                            <PasswordField fx:id="oldPasswordField" prefWidth="200"/>
                        </children>
                    </HBox>

                    <HBox spacing="10.0">
                        <children>
                            <Label text="New Password:" prefWidth="140"/>
                            <PasswordField fx:id="newPasswordField" prefWidth="200"/>
                        </children>
                    </HBox>

                    <HBox spacing="10.0">
                        <children>
                            <Button text="Save" onAction="#handleSave"/>
                        </children>
                    </HBox>

                    <Label fx:id="statusLabel" textFill="red"/>

                </children>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

        </children>
    </VBox>
</AnchorPane>
